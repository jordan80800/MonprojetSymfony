{% extends 'base.html.twig' %}

{% block body  %}
	<div class="w-full flex justify-center  mt-11  text-center ">
		<div class="w-full flex justify-center pb-[307px]">


			{{ form_start(form ,{'attr':{ 'class': '  sm:w-1/2' }})  }}
			<div class="backdrop-blur-md formscontact rounded-xl shadow-xl">
				<h1 class="text-4xl pt-6">Contact</h1>
				<div class=" mb-2 pt-11 pr-11 pl-11">

					{{ form_label(form.objet, "Objet") }}
					{{ form_widget(form.objet,{'attr':{ 'class': ' border border-slate-800 text-black h-16 w-full rounded-xl' }}) }}
					{{ form_errors(form.objet,{'attr':{ 'class': 'text-yellow-600' }}) }}
				</div>

				<div class="  mb-2 pt-11 pr-11 pl-11">
					{{ form_row(form.email ,{'attr':{ 'class': ' border border-slate-800 text-black h-16 w-full rounded-xl' }}) }}
					{{ form_errors(form.email) }}

				</div>
				<div class="  mb-2 pt-11 pr-11 pl-11">
					{{ form_row(form.message ,{'attr':{ 'class': ' border border-slate-800 text-black w-full  rounded-xl pl-4', 'rows': '4'  }}) }}
				</div>
				<div>
					{{form_widget(form.save,{'attr':{ 'class': 'text-xl  bg-white m-4 p-2 rounded-full hover:bg-sky-500'}})}}
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>{% endblock %}
