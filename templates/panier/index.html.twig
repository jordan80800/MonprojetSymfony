{% extends 'base.html.twig' %}

{% block title %}Hello TestController!
{% endblock %}

{% block body %}
	<div class="flex justify-center">
		<h1 class="text-7xl">panier</h1>
	</div>
	<div class="flex justify-center pt-11">
		<table class="table-auto ">
			<thead>
				<tr>
					<th class="pr-11">Plat</th>
					<th class="pr-11">Prix</th>
					<th class="pr-11">Quantité</th>
				</tr>
			</thead>
			<tbody>
				{% set total = 0 %}
				{% for plat in nouveau %}
					{% set total = total+(plat.prix * quantite[plat.id] ) %}

					<tr>
						<td class="text-black pr-11  ">{{ plat.libelle }}</td>
						<td class="text-black pr-11 ">{{ plat.prix }}€</td>
						<td class="text-black pr-11 flex justify-center">
							{{ quantite[plat.id] }}
						</td>
					</tr>
				{% endfor %}
               
			</tbody>
		</table>
        
	</div>
    <div class=" flex justify-center text-7xl pb-11">
        <h1 class="text-7xl">Total :  {{total}} €</h1>   
            </div>
			<div class="flex justify-center">
			<a href="{{path('app_commande')}}" class="btn rounded-full bg-black text-white hover:bg-red-500 hover:text-white p-3  "> Passer La Commande </a>
			</div>
		{% endblock %}
